<div>
 <h2 > Create New Post<h2>

<%= form_with model: @post, url: user_posts_path, scope: :post, html: {class: ""} do |form| %>  
      <div>
  <%= form.text_field :title, placeholder: "Title", required: true %><br>
      <%= form.text_area :text, placeholder: "Type here...", rows: 10, required: true %>
  <%= form.submit "Post"%>
  </div>
<% end %> 

</div>  